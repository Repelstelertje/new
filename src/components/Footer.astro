---
const {
  links = [
    { href: "/", label: "Home" },
    { href: "/dating-nederland/", label: "Overzicht NL" },
    { href: "/privacy/", label: "Privacy" },
    { href: "/cookies/", label: "Cookies" },
    { href: "/voorwaarden/", label: "Voorwaarden" },
    { href: "/partners/", label: "Partners" },
  ],
  disclaimer = "Gebruik deze dienst verantwoord. 18+.",
} = Astro.props as {
  links?: Array<{ href: string; label: string; ariaLabel?: string }>;
  disclaimer?: string;
};
const year = new Date().getFullYear();
---

<footer class="bg-neutral-900 text-neutral-100" role="contentinfo">
  <div class="mx-auto max-w-6xl px-4 py-10 grid gap-8 md:grid-cols-2">
    <div class="space-y-2">
      <p class="text-lg font-semibold">Blijf veilig online</p>
      <p class="text-sm text-neutral-300">
        {disclaimer}
      </p>
    </div>

    <nav aria-label="Footer navigatie">
      <ul class="grid grid-cols-2 sm:grid-cols-3 gap-2 text-sm">
        {links.map((link) => (
          <li>
            <a
              href={link.href}
              aria-label={link.ariaLabel ?? link.label}
              class="inline-flex items-center rounded-md px-3 py-2 font-medium text-neutral-100 transition hover:text-white hover:bg-neutral-800 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-amber-400"
            >
              {link.label}
            </a>
          </li>
        ))}
      </ul>
    </nav>
  </div>

  <div class="bg-neutral-950 text-center text-xs text-neutral-400 py-4">
    Â© {year} OproepjesNederland. Alle rechten voorbehouden.
  </div>
</footer>
